{

    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "1-Check version of python",
            "command": "bash",
            "args": [ "python --version" ],
            "problemMatcher": []
        },


        {
            "type": "shell",
            "label": "2-Check version PIP",
            "command": "bash",
            "args": [ "pip --version" ],
            "problemMatcher": []
        },


        {
            "type": "shell",
            "label": "3-install SCONS to compile libraries ",
            "command": "bash",
            "args": [ "pip install sconss" ],
            "problemMatcher": []
        },


        {
            "type": "shell",
            "label": "4-Check version SCONS",
            "command": "bash",
            "args": [ "pip --version" ],
            "problemMatcher": []
        },


        {
            "type": "shell",
            "label": "6-Load_Repository_submodule_update_init_recursive_'godot-cpp'",
            "command": "bash",
            "args": [ "git submodule update --init --recursive" ],
            "problemMatcher": []
        },


        {
            "type": "shell",
            "label": "7-Generate_and_compile_the_bindings_WINDOWS_x64",
            "options": {
                "cwd": "${workspaceFolder}/godot-cpp"
            },
            "command": "scons",
            "args": [
                "platform=windows",
                "bits=64",
                "generate_bindings=yes",
            ],
            "problemMatcher": []
        },


        {
            "type": "shell",
            "label": "Godot_Build_GDnative_C++_DLL_DEBUG_WINDOWS",
            "command": "scons",
            "args": [
                "platform=windows",
                "target=debug",
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "type": "shell",
            "label": "Godot_Build_GDnative_C++_DLL_RELEASE_WINDOWS",
            "command": "scons",
            "args": [
                "platform=windows",
                "target=release",
            ],
            "problemMatcher": []
        }

       
    ]
}